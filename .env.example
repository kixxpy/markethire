# База данных
# PostgreSQL connection string
# Формат: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/markethire"

# JWT секретный ключ
# ВАЖНО: Используйте длинный случайный ключ минимум 32 символа
# Для генерации можно использовать: openssl rand -base64 32
JWT_SECRET="your-secret-key-minimum-32-characters-long-change-in-production"

# Окружение
# Возможные значения: development, production, test
NODE_ENV="development"

# Опциональные переменные для продакшена
# CORS_ORIGIN="https://yourdomain.com"
# LOG_LEVEL="info" # debug, info, warn, error
# MAX_REQUEST_SIZE="1mb" # Максимальный размер тела запроса

# JWT Refresh секретный ключ (опционально, по умолчанию используется JWT_SECRET)
# ВАЖНО: В продакшене используйте отдельный секретный ключ для refresh токенов
JWT_REFRESH_SECRET="your-refresh-secret-key-minimum-32-characters-long"

# CORS Origin (опционально)
# Укажите домен вашего фронтенда для продакшена
# CORS_ORIGIN="https://yourdomain.com"

# Уровень логирования (опционально)
# Возможные значения: debug, info, warn, error
# LOG_LEVEL="info"

# Максимальный размер тела запроса (опционально)
# Формат: число + единица измерения (b, kb, mb, gb)
# MAX_REQUEST_SIZE="1mb"
